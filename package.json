{
  "name": "bionic-parts",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "generate": "drizzle-kit generate:sqlite",
    "up": "drizzle-kit up:sqlite",
    "db:list": "wrangler d1 migrations list bionic-parts",
    "db:push": "wrangler d1 migrations apply bionic-parts",
    "tail": "wrangler pages deployment tail --project-name bionic-parts"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.116",
    "@miniflare/d1": "^2.14.0",
    "@miniflare/shared": "^2.14.0",
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-cloudflare": "^2.3.0",
    "@sveltejs/kit": "^1.20.4",
    "@types/w3c-web-usb": "^1.0.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "better-sqlite3": "^8.0.1",
    "bootstrap": "^5.2.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.30.0",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.10.1",
    "sass": "^1.62.0",
    "svelte": "^4.0.0",
    "svelte-check": "^3.4.3",
    "svelte-preprocess": "^5.0.3",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "unplugin-icons": "^0.17.0",
    "vite": "^4.3.0",
    "vitest": "^1.6.1"
  },
  "type": "module",
  "dependencies": {
    "@types/async-retry": "^1.4.9",
    "@types/qrcode": "^1.5.5",
    "async-retry": "^1.3.3",
    "bootstrap": "^5.2.3",
    "buffer": "^6.0.3",
    "drizzle-kit": "^0.18.0",
    "drizzle-orm": "^0.29.0",
    "mini-canvas-editor": "^0.3.0",
    "qrcode": "^1.5.3",
    "svelte-persisted-store": "^0.12.0",
    "svelte-select": "^5.6.1",
    "sveltekit-flash-message": "^1.0.1",
    "sveltekit-superforms": "^1.1.3",
    "tabulator": "^0.2.40",
    "wrangler": "^4.4.0",
    "xlsx": "^0.18.5"
  }
}
